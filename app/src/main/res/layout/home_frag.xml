<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9AC6FF">

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Texto de boas vindas do app, para você que está se drogando e quer parar de usar as drogas da vida e tudo mais, por favor, escolha o seu tipo de usuário, valheu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.github.siyamed.shapeimageview.mask.PorterCircularImageView
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_addict_heart"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/history"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:text="@string/main_screen.addict_tittle"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.github.siyamed.shapeimageview.mask.PorterCircularImageView
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_godfather_option"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp"
                    android:text="@string/main_screen.godfather_tittle"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>