<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
            <item name="colorPrimary" >@color/white</item>
            <item name="colorPrimaryDark">@color/primaryBlue</item>
            <item name="colorAccent">@color/gray</item>
            <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="Hover">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:windowNoTitle">true</item>
        <item name="android:fadeEnabled">true</item>
        <item name="android:fadeDuration">1500</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:innerRadius">30dp</item>
        <item name="android:background">@drawable/shape_round_background_blue</item>
    </style>

</resources>
